{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "class-methods-use-this": 1,
        "no-restricted-syntax": 1,
        "no-use-before-define": 0,
        "no-param-reassign": 1,
        "no-console": 2,
        "no-useless-escape": 1,
        "new-cap": 0,
        "func-names": 0,
        "prefer-spread": 1,
        "space-before-function-paren": 0,
        "comma-dangle": [2, "never"],
        "strict": 0,
        "max-len": [1, 120]
    }
}
